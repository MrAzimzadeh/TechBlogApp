@if (@ViewBag.AdvertisementExist != null)
{
    <div class="col-lg-6 m-auto mb-5">
        <div class="alert alert-danger">
            @ViewBag.AdvertisementExist
        </div>
    </div>
}



<div class="col-lg-6 m-auto">
    <div class="card shadow p-3 mb-4">
        <form method="post">
            <div class="form-group">
                <label for="advertisement"> advertisement </label>
                <input id="advertisement" class="form-control" type="text" name="Name" />
            </div>
            <div class="form-group">
                <input class="btn btn-outline-success btn-sm" type="submit" value="Submit" />
            </div>
        </form>
    </div>
</div>