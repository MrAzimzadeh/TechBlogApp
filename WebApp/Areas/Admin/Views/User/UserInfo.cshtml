@model User



<form method="post" enctype="multipart/form-data">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 m-auto">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="Name" class="form-label"></label>
                                    <input class="form-control" asp-for="Name" />
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="Surname" class="form-label"></label>
                                    <input class="form-control" asp-for="Surname" />
                                    <span class="text-danger" asp-validation-for="Surname"></span>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label asp-for="AboutAuthor" class="form-label"></label>
                                    <textarea id="editor1" class="form-control" asp-for="AboutAuthor"></textarea>
                                    <span class="text-danger" asp-validation-for="AboutAuthor"></span>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <input type="submit" value="Update" class="btn btn-outline-success" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="rows">
                    <div class="card mb-6">
                        <div class="card-body">
                            <div class="form-group">
                                <img class="img-fluid mb-4" src="@Model.PhotoUrl" />
                                <input type="file" class="form-control" name="Photo" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <script src="https://cdn.ckeditor.com/4.20.1/standard/ckeditor.js"></script>

    <script>
        CKEDITOR.replace('editor1');
    </script>
}