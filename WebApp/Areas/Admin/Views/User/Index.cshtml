@model IEnumerable<User>
@inject Microsoft.AspNetCore.Identity.UserManager<User> _userManager 
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            <a asp-area="Admin" asp-controller="User" asp-action="Create" class="text-decoration-none">Create</a>
        </h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Picture </th>
                        <th>Name</th>
                        <th>Surname</th>
                        <th>User Roles</th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Picture </th>
                        <th>Name</th>
                        <th>Surname</th>
                        <th>User Roles</th>
                        <th></th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>
                                <img width="72" class="img-thumbnail" src="@user.PhotoUrl">
                            </td>
                            <td>@user.Name</td>
                            <td>@user.Surname</td>
                            <td>
                                @{
                                    var roles = await  _userManager.GetRolesAsync(user);
                                    foreach (var role in roles)
                                    {
                                        <span class="badge badge-info">
                                        @role
                                        </span>
                                    }
                                } 
                            </td>
                            <td>
                                <a asp-area="Admin" asp-controller="User" asp-action="AddRole" asp-route-id="@user.Id">Add Role</a>
                                <a href="/admin/user/delete/@user.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
